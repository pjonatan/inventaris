<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    
   <LinearLayout
	    android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/grey">
    	
        <ImageView
        	android:contentDescription="@null"
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="2dp"
		    android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentLeft="true"
			android:src="@drawable/room1" />
        
        <TextView
        	android:layout_marginLeft="10dp"
        	android:layout_marginTop="10dp"
        	android:textColor="@color/putih"
        	android:textSize="18sp"
		    android:layout_width="240dp"
			android:layout_height="40dp"
            android:text="@string/t_item" />
        
        <ImageView
    	    android:id="@+id/back"
        	android:contentDescription="@null"
		    android:layout_width="40dp"
		    android:layout_marginLeft="20dp"
			android:layout_marginTop="2dp"
			android:layout_height="40dp"
			android:src="@drawable/back" />
             
   </LinearLayout>
   
     <TextView
         android:layout_marginLeft="10dp"
         android:background="@drawable/bblue"
         android:textColor="@color/putih"
		 android:paddingLeft="5dp"
         android:textSize="25sp"
         android:layout_marginTop="10dp"
 		 android:layout_width="240dp"
		 android:layout_height="40dp"
         android:text="@string/nm_inventaris" />
     
     <EditText
         android:id="@+id/nama"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="1dp"
         android:textSize="16sp"
 		 android:layout_width="340dp"
		 android:layout_height="40dp"
		 android:inputType="textNoSuggestions"
		 android:paddingLeft="5dp"
		 android:paddingTop="5dp"
		 android:background="@drawable/bwhite"
          />
          
     <TextView
         android:layout_marginLeft="10dp"
         android:background="@drawable/bblue"
         android:textColor="@color/putih"
		 android:paddingLeft="5dp"
         android:textSize="25sp"
         android:layout_marginTop="10dp"
 		 android:layout_width="240dp"
		 android:layout_height="40dp"
         android:text="@string/info" />
     
     <EditText
         android:id="@+id/info"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="1dp"
         android:textSize="16sp"
		 android:inputType="textNoSuggestions"
 		 android:layout_width="340dp"
		 android:layout_height="40dp"
		 android:paddingLeft="5dp"
		 android:paddingTop="5dp"
		 android:background="@drawable/bwhite"
          />
     
     <TextView
       	 android:id="@+id/tambah_item"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ogold"
         android:textColor="@color/red"
		 android:paddingLeft="20dp"
         android:textSize="25sp"
         android:layout_marginTop="5dp"
 		 android:layout_width="fill_parent"
		 android:layout_height="40dp"
         android:text="@string/tambah3" />
          
</LinearLayout>    